import("//build/image/image.gni")
import("//test/hftest/args.gni")

group("arch") {
  testonly = true

  deps = [
    ":aarch64_test",
  ]
}

# Tests specific to aarch64.
vm_kernel("aarch64_test_vm") {
  testonly = true
  public_configs = [ "//src/arch/aarch64:config" ]

  sources = [
    "arch_features.c",
    "smc_whitelist.c",
    "smccc.c",
  ]

  deps = [
    "//src/arch/aarch64:arch",
    "//test/hftest:hftest_primary_vm",
  ]
}

initrd("aarch64_test") {
  testonly = true

  manifest = "manifest.dts"
  manifest_overlay = hftest_manifest_overlay
  primary_name = "aarch64_test"
  primary_vm = ":aarch64_test_vm"
}
